import React, { createContext, useState } from 'react';

export const AuthContext = createContext();

export const AuthProvider = ({ children }) => {
  const [user, setUser] = useState(null);
  const [registeredUser, setRegisteredUser] = useState(null);  // ✅ armazena usuário cadastrado

  const login = (username, password) => {
    if (registeredUser && username === registeredUser.username && password === registeredUser.password) {
      setUser({ username });
    } else {
      alert('Usuário ou senha inválidos!');
    }
  };

  const logout = () => {
    setUser(null);
  };

  const register = (username, password) => {
    if (username && password) {
      setRegisteredUser({ username, password });  // ✅ apenas armazena, NÃO loga
    }
  };

  return (
    <AuthContext.Provider value={{ user, login, logout, register }}>
      {children}
    </AuthContext.Provider>
  );
};
